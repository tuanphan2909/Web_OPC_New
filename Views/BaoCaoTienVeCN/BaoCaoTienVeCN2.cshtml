    <script>
        $(document).ready(function () {
            calculateTotal();

            function calculateTotal() {
                var totalColumns = new Array(2).fill(0); // Khởi tạo mảng chứa tổng của 8 cột

                $('#example tbody tr:not(#total-row)').each(function () {
                    var cells = $(this).find('td');

                    cells.each(function (index) {
                        if (index >= cells.length - 2) { // Tính tổng cho 8 cột cuối cùng
                            var columnValue = parseFloat($(this).text().replace(/,/g, ''));

                            if (!isNaN(columnValue)) {
                                totalColumns[index - (cells.length - 2)] += columnValue;
                            }
                        }
                    });
                });

                // Gán giá trị tổng từng cột vào các biến riêng
                var sum = totalColumns[1];


                // Hiển thị giá trị tổng từng cột lên view
                $('#sum').text(formatNumber(sum));

            }

            function formatNumber(number) {
                return number.toLocaleString('en-US');
            }
        });</script>
    <script>
        $(document).ready(function () {
            var dataTable = $('#example').DataTable();

            function calculateTotal() {
                var totalColumns = new Array(3).fill(0);

                dataTable.rows({ search: 'applied' }).every(function () {
                    var rowData = this.data();
                    rowData.forEach(function (cellValue, columnIndex) {
                        var columnValue = parseFloat(cellValue.toString().replace(/,/g, ''));
                        if (!isNaN(columnValue)) {
                            totalColumns[columnIndex] += columnValue;
                        }
                    });
                });

                updateTotalValues(totalColumns);
            }
            function updateTotalValues(totalColumns) {
                // Gán giá trị tổng từng cột vào các biến riêng
                var sum = totalColumns[2];


                // Hiển thị giá trị tổng từng cột lên view

                $('#sum1').text(formatNumber(sum));

                var grandTotal = totalColumns.reduce(function (total, value) {
                    return total + value;
                }, 0);

                $('#grand-total').text(formatNumber(grandTotal));
            }

            calculateTotal();

            $('input').on('input', function () {
                calculateTotal();
            });

            // Sự kiện lắng nghe khi giá trị ô input trong bảng thay đổi
            $('#example tbody').on('input', 'input', function () {
                calculateTotal();
            });

            function formatNumber(number) {
                return number.toLocaleString('en-US');
            }
        });
    </script>
    <script>
        // Set the "Từ Ngày" input to the first day of the current month
        function setFirstDayOfCurrentMonth() {
            const currentDate = new Date();
            const firstDayOfMonth = new Date(currentDate.getFullYear(), currentDate.getMonth(), 1);
            const formattedDate = formatDate(firstDayOfMonth);

            document.getElementById("tu_ngay").value = formattedDate;
        }
        function setCurrentDate() {
            const currentDate = new Date();
            const formattedToDate = formatDate(currentDate);
            document.getElementById("den_ngay").value = formattedToDate;
        }
        // Format the date as "yyyy-mm-dd" for input type="date"
        function formatDate(date) {
            const year = date.getFullYear();
            const month = (date.getMonth() + 1).toString().padStart(2, "0");
            const day = date.getDate().toString().padStart(2, "0");
            return `${year}-${month}-${day}`;
        }

        // Call the function to set the "Từ Ngày" input on page load
        setFirstDayOfCurrentMonth();
        setCurrentDate();
    </script>
