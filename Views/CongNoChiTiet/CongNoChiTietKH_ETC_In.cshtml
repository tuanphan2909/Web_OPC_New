            var partSize = 30;
            var parts = [];
            for (var i = 0; i < 3; i++) {
                var start = i * partSize;
                var end = (i === 2) ? tableData.length : start + partSize;
                var part = tableData.slice(start, end);
                parts.push(part);
            }

            // Chuyển mỗi phần thành chuỗi JSON và lưu vào các cookie riêng rẽ
            for (var i = 0; i < parts.length; i++) {
